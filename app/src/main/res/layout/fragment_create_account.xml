<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="signupValidator"
            type="com.base.hilt.ui.createAccount.CreateAccountValidator" />

        <variable
            name="signupHandler"
            type="com.base.hilt.ui.createAccount.CreateAccountHandler" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.createAccount.CreateAccountFragment">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFirstName"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFirstName"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={signupValidator.firstName}"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilLastName"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilFirstName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLastName"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:text="@={signupValidator.lastName}"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAliasName"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilLastName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAliasName"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={signupValidator.userName}"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMobileNumber"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilAliasName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMobileNumber"
                android:maxLines="1"
                android:maxLength="12"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:text="@={signupValidator.mobileNumber}"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilMobileNumber">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={signupValidator.password}"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textPassword"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="@={signupValidator.email}"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDob"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date Of Birth"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilEmail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDob"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={signupValidator.dob}"
                android:inputType="text"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmPassword"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#D2691E"
            app:hintTextColor="#D2691E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilPassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={signupValidator.confirmPassword}"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateAcount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:background="@drawable/gradient"
            android:fontFamily="@font/poppinssemibold"
            android:text="Create Account"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:onClick="@{()->signupHandler.onSignupClick(signupValidator)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilDob"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>